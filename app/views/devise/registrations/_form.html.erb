<div class="container">
  <div class="signup-form">  
    <div class="row">
      <div class="col-7">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <div class="form-line">
              <%= f.label :Email, class: 'label-name' %>
              <%= f.email_field :email, placeholder: 'Enter your email', autofocus: true, autocomplete: 'email', class: 'form-control  border-0' %>
            </div>  
          </div>

          <div class="form-group">
            <div class="form-line">
              <%= f.label :full_name, class: 'label-name' %>
              <%= f.text_field :full_name, placeholder: 'Enter your name', autofocus: true, autocomplete: 'full_name', class: 'form-control border-0' %>
            </div>  
          </div>

          <div class="form-group">
            <div class="form-line">
                <%= f.label :password, class: 'label-name' %>
                <%= f.password_field :password, placeholder: 'Set new password', autocomplete: 'current-password', class: 'form-control  border-0' %>

              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
              <% end %>
            </div>
          </div>

          <div class="form-group">
            <div class="form-line">
              <%= f.label :Confirm_Password, class: 'label-name' %>
              <%= f.password_field :password_confirmation, placeholder: 'Enter your password again', autocomplete: 'current-password', class: 'form-control border-0' %>
            </div>
          </div>

          <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
            <label class="form-check-label" for="flexCheckChecked">
              Send me update and relevant news
            </label>
          </div>

          <div class="form-group mb-3">
            <%= f.submit ('Sign Up'), class:'btn btn-primary' %>
          </div>
          <div class="para">
            <span> Already have an account? </span>
            <a href="#signInModal" class="singin" id="signIn-link" data-toggle="modal" data-target="#signInModal">Sign in</a>
          </div>
            <p class="small text-center text-muted mt-3 para-text">By continuing you agree to our  <br><a class="text-muted", href="#">Terms &amp; Service</a>, and <a class="text-muted", href="#">Privacy Policy</a>.</p>
        <% end %>
      </div>  
    </div>
  </div>
</div>
