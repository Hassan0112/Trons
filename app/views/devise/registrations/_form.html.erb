
<div class="signup-form">  
  <div class="row">
    <div class="col-7">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-group">
          <div class="form-line">
            <%= f.label :Email %>
            <%= f.email_field :email, placeholder: 'Enter your email', autofocus: true, autocomplete: 'email', class: 'form-control  border-0' %>
          </div>  
        </div>

        <div class="form-group">
          <div class="form-line">
            <%= f.label :full_name %>
            <%= f.text_field :full_name, placeholder: 'Enter your name', autofocus: true, autocomplete: 'full_name', class: 'form-control border-0' %>
          </div>  
        </div>

        <div class="form-group">
          <div class="form-line">
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: 'Set new password', autocomplete: 'current-password', class: 'form-control  border-0' %>

            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="form-line">
            <%= f.label :Confirm_Password %>
            <%= f.password_field :password_confirmation, placeholder: 'Enter your password again', autocomplete: 'current-password', class: 'form-control border-0' %>
          </div>
        </div>

        <div class="form-check mb-4">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
          <label class="form-check-label" for="flexCheckChecked">
          Send me update and relevant news
          </label>
        </div>

        <div class="form-group mb-3">
          <%= f.submit ('.sign_up'), class: 'btn btn-primary' %>
        </div>
          <p class="d-inline"> Already have an account? </p><span><%= link_to'Sign in', new_user_session_path %></span>
          <p class="small text-center mt-3">By clicking the Sign Up button, you agree to our <br><a href="#">Terms &amp; Conditions</a>, and <a href="#">Privacy Policy</a>.</p>
      <% end %>
    </div>  
  </div>
</div>