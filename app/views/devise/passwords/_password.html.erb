<div class="forgot-form">
  <%= form_for(@resource, as: @resource_name, url: user_password_path(), html: { method: :post,  id: 'forgot_password_form' }) do |f| %>
      <h1 class="forgot-h1">Forgot your password?</h1>
      <div class="forgot-p">
        <p>Type your email below to reset your password.</p>
      </div>
    <div class="form-group">
      <div class="forgot-line">
        <%= f.label :Email, class:'forgot-label'%>
        <%= f.email_field :email, placeholder: 'Type Your Email', autofocus: true, autocomplete: 'off', class: 'form-control border-0',id:'forgot-pass' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit ('Continue'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>