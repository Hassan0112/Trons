<% if user_signed_in? %>
  <div class="dropdown text-center">
    <p class="dropbtn" onclick="toggleDropdown()">Welcome <%= current_user.full_name %>!<i class="fa-solid fa-caret-down"></i></p>
<% else %>
  <%= link_to 'Sign Up', new_user_registration_path %>
  <%= link_to 'Sign In', new_user_session_path %>
<% end %>